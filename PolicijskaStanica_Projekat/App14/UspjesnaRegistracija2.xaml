        </TextBlock>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Height="206" Margin="117,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="498" Foreground="White" FontSize="30">
        	<Run Text="- Aplikaciju koristiti odgovorno i profesionalno   "/>
        	<Run Text="                                      "/>
        	<Run Text="- Unosom netačnih podataka možete biti novčano kažnjeni"/>
        </TextBlock>
        <Button x:Name="button" Content="Idi na početnu" HorizontalAlignment="Left" Height="65" Margin="241,495,0,0" VerticalAlignment="Top" Width="276" Foreground="#FF111111" Background="#FF958D8D" FontSize="25" Click="button_Click"/>

    </Grid>
</Page>
